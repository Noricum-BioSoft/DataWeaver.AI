# DataWeaver.AI Environment Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database connection string (PostgreSQL recommended for production)
DATABASE_URL=postgresql://postgres:password@localhost:5432/dataweaver

# Alternative SQLite configuration for development
# DATABASE_URL=sqlite:///./dataweaver.db

# Database connection pool settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Backend server settings
BACKEND_HOST=localhost
BACKEND_PORT=8000
BACKEND_RELOAD=true

# CORS settings
BACKEND_ALLOW_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# File storage settings
STORAGE_PATH=storage
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=csv,xlsx,xls,txt,json,xml

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Frontend server settings
FRONTEND_HOST=localhost
FRONTEND_PORT=3000

# API configuration
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_HOSTED_MODE=false

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================

# OpenAI configuration (for AI features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
MODEL_NAME=gpt-4o-mini

# Alternative LLM providers
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# COHERE_API_KEY=your_cohere_api_key_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for JWT tokens and session management
SECRET_KEY=your_secret_key_here_change_in_production

# Session configuration
SESSION_TIMEOUT=3600
SESSION_COOKIE_SECURE=false

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development mode settings
DEBUG=true
ENVIRONMENT=development

# Testing configuration
TEST_DATABASE_URL=sqlite:///./test.db
TESTING=false

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production settings (override in production)
# DEBUG=false
# ENVIRONMENT=production
# SESSION_COOKIE_SECURE=true
# BACKEND_RELOAD=false

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Health check settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Metrics and monitoring
METRICS_ENABLED=false
METRICS_PORT=9090

# =============================================================================
# FILE PROCESSING CONFIGURATION
# =============================================================================

# Supported text file encodings
TEXT_FILE_ENCODINGS=utf-8,latin1,cp1252,iso-8859-1

# CSV processing settings
CSV_DELIMITER=auto
CSV_ENCODING=utf-8
CSV_MAX_ROWS=1000000

# Excel processing settings
EXCEL_SHEET_INDEX=0
EXCEL_HEADER_ROW=0

# =============================================================================
# WORKFLOW CONFIGURATION
# =============================================================================

# Workflow execution settings
WORKFLOW_TIMEOUT=300
WORKFLOW_MAX_STEPS=50
WORKFLOW_RETRY_ATTEMPTS=3

# Session management
SESSION_CLEANUP_INTERVAL=3600
SESSION_MAX_AGE=86400

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================

# Redis configuration (optional, for caching)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Cache settings
CACHE_ENABLED=false
CACHE_TTL=300

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# AWS configuration (for S3 storage, optional)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-west-2
# AWS_S3_BUCKET=your-bucket-name

# Google Cloud configuration (optional)
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_CLOUD_STORAGE_BUCKET=your-bucket-name

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Email configuration (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_TLS=true

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Performance tuning
WORKER_PROCESSES=1
WORKER_THREADS=4

# Memory management
MAX_MEMORY_USAGE=1GB
GARBAGE_COLLECTION_INTERVAL=300

# Network settings
REQUEST_TIMEOUT=30
CONNECTION_TIMEOUT=10

# =============================================================================
# FRONTEND FEATURE FLAGS
# =============================================================================

# Feature Flags
REACT_APP_ENABLE_AI_CHAT=true
REACT_APP_ENABLE_FILE_UPLOAD=true
REACT_APP_ENABLE_VISUALIZATION=true

# External Services (if needed)
REACT_APP_ANALYTICS_ID=your-analytics-id
REACT_APP_SENTRY_DSN=your-sentry-dsn
